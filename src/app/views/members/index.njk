{% extends 'layout.njk' %}

{% block content %}
  <div class="card table-container">
    <a href="/members/create">Novo</a>

    <table width="100%">
      <thead>
        <tr>
          <th>#</th>
          <th>Photo</th>
          <th>Membro</th>
          <th>Peso</th>
          <th>Altura</th>
          <th width="120px">Buttons</th>
        </tr>
      </thead>
      <tbody>
        {% for member in members %}
          <tr>
            <td>{{member.id}}</td>
            <td><img src="{{member.avatar_url}}" alt="{{member.name}}" style="height: 64px; border-radius:100%;"></td>
            <td>{{member.name}}</td>
            <td>{{member.weight}}
              kg</td>
            <td>{{member.height }}
              cm</td>
            <td>
              <a href="/members/{{member.id}}" style="background-color:var(--cor-charlie);">Ver</a>
              <a href="/members/{{member.id}}/edit" style="background-color:var(--cor-beta);">Edit</a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock content %}